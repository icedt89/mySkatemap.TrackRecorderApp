<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical">
    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/trackrecorderactivity_tab_data_trackname"
                android:hint="@string/trackrecorderactivity_tab_data_trackname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:inputType="textShortMessage"
                android:textSize="18sp" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/trackrecorderactivity_tab_data_trackdistance"
                android:hint="@string/trackrecorderactivity_tab_data_trackdistance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:enabled="false"
                android:clickable="false"
                android:textIsSelectable="false"
                android:focusable="false"
                android:focusedByDefault="false"
                android:focusableInTouchMode="false"
                android:selectAllOnFocus="false"
                android:textSize="18sp" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/trackrecorderactivity_tab_data_recordingtime"
                android:hint="@string/trackrecorderactivity_tab_data_recordingtime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:enabled="false"
                android:clickable="false"
                android:textIsSelectable="false"
                android:focusable="false"
                android:focusedByDefault="false"
                android:focusableInTouchMode="false"
                android:selectAllOnFocus="false"
                android:textSize="18sp" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/trackrecorderactivity_fragment_data_tab_locationscount"
                android:hint="@string/trackrecorderactivity_tab_data_numberofpositions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:enabled="false"
                android:clickable="false"
                android:textIsSelectable="false"
                android:focusable="false"
                android:focusedByDefault="false"
                android:focusableInTouchMode="false"
                android:selectAllOnFocus="false"
                android:textSize="18sp" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/trackrecorderactivity_tab_data_startedat"
                android:hint="@string/trackrecorderactivity_tab_data_startedat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:enabled="false"
                android:clickable="false"
                android:textIsSelectable="false"
                android:focusable="false"
                android:focusedByDefault="false"
                android:focusableInTouchMode="false"
                android:selectAllOnFocus="false"
                android:textSize="18sp" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/trackrecorderactivity_tab_data_comments"
                android:hint="@string/trackrecorderactivity_tab_data_comments"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textMultiLine"
                android:textSize="18sp" />
        </android.support.design.widget.TextInputLayout>
    </android.support.v7.widget.LinearLayoutCompat>
</ScrollView>
