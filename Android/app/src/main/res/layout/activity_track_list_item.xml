<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/MySkatemap.TrackList.ItemTheme"
    app:cardUseCompatPadding="true">
    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/activity_track_list_item_tracking_name"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/activity_track_list_item_tracking_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_more_vert_black_24dp" />
        </android.support.v7.widget.LinearLayoutCompat>
        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/activity_track_list_item_tracking_startedat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Test" />
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/activity_track_list_item_tracking_finishedat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Test" />
        </android.support.v7.widget.LinearLayoutCompat>
        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/activity_track_list_item_tracking_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Test" />
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/activity_track_list_item_tracking_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Test" />
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/activity_track_list_item_tracking_fitness_calories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Test" />
        </android.support.v7.widget.LinearLayoutCompat>
    </android.support.v7.widget.LinearLayoutCompat>
</android.support.v7.widget.CardView>
