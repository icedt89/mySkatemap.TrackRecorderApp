<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/trackrecorderactivity_navigationdrawer">
        <android.support.design.widget.AppBarLayout
            android:fitsSystemWindows="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <include layout="@layout/app_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <android.support.design.widget.CoordinatorLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <android.support.v4.view.ViewPager
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/trackrecorderactivity_toolbar_viewpager">
                    <android.support.design.widget.TabLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/trackrecorderactivity_toolbar_tablayout">
                        <android.support.design.widget.TabItem
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/trackrecorderactivity_toolbar_tab_track" />
                        <android.support.design.widget.TabItem
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/trackrecorderactivity_toolbar_tab_data" />
                    </android.support.design.widget.TabLayout>
                </android.support.v4.view.ViewPager>
                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/trackrecorderactivity_main_floatingactionbutton"
                    android:layout_gravity="bottom|end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:src="@drawable/ic_play_arrow_bright_24dp" />
            </android.support.design.widget.CoordinatorLayout>
        </android.support.design.widget.AppBarLayout>
    <android.support.design.widget.NavigationView
        android:id="@+id/trackrecorderactivity_navigation"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/app_navigation_drawer_menu"
        app:headerLayout="@layout/navigation_drawer_header"/>
</android.support.v4.widget.DrawerLayout>