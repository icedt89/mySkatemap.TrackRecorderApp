<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/viewfinishedtrackactivity_navigationdrawer">
    <com.google.android.material.appbar.AppBarLayout
            android:fitsSystemWindows="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <include layout="@layout/app_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <androidx.coordinatorlayout.widget.CoordinatorLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.viewpager.widget.ViewPager
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/viewfinishedtrackactivity_toolbar_viewpager">
                    <com.google.android.material.tabs.TabLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:theme="@style/Theme.AppCompat"
                        android:background="@color/primaryColor"
                        app:tabTextColor="@color/textColor"
                        app:tabIndicatorColor="@color/accentColor"
                        android:id="@+id/viewfinishedtrackactivity_toolbar_tablayout">
                    </com.google.android.material.tabs.TabLayout>
                </androidx.viewpager.widget.ViewPager>
            </androidx.coordinatorlayout.widget.CoordinatorLayout>
        </com.google.android.material.appbar.AppBarLayout>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/viewfinishedtrackactivity_navigation"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:itemTextColor="@color/textColor"
        app:menu="@menu/app_navigation_drawer_menu"
        app:headerLayout="@layout/navigation_drawer_header"/>
</androidx.drawerlayout.widget.DrawerLayout>