<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="2"
    android:orientation="vertical"
    android:rowCount="3"
    android:padding="10dp">

    <FrameLayout style="@style/MySkatemap.TrackRecorder.Dashboard.Tile.Fragment"
        android:layout_column="0"
        android:layout_row="0"
        android:id="@+id/trackrecorderactivity_tab_dashboard_tile_top_left" />

    <FrameLayout style="@style/MySkatemap.TrackRecorder.Dashboard.Tile.Fragment"
        android:layout_column="1"
        android:layout_row="0"
        android:id="@+id/trackrecorderactivity_tab_dashboard_tile_top_right" />

    <FrameLayout style="@style/MySkatemap.TrackRecorder.Dashboard.Tile.Fragment"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_row="1"
        android:id="@+id/trackrecorderactivity_tab_dashboard_tile_middle_center" />

    <FrameLayout style="@style/MySkatemap.TrackRecorder.Dashboard.Tile.Fragment"
        android:layout_column="0"
        android:layout_row="2"
        android:id="@+id/trackrecorderactivity_tab_dashboard_tile_bottom_left" />

    <FrameLayout style="@style/MySkatemap.TrackRecorder.Dashboard.Tile.Fragment"
        android:layout_column="1"
        android:layout_row="2"
        android:id="@+id/trackrecorderactivity_tab_dashboard_tile_bottom_right" />
</GridLayout>