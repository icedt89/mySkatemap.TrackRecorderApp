<resources>
    <style name="MySkatemap.TrackRecorder.AppTheme.AppCompat" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="colorPrimary">@color/primaryTextColor</item>
        <item name="colorAccent">@color/secondaryColor</item>
        <item name="android:statusBarColor">@color/primaryDarkColor</item>
        <item name="android:navigationBarColor">@color/primaryDarkColor</item>
    </style>

    <style name="MySkatemap.TrackRecorder.SplashscreenActivityTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@drawable/splashscreen</item>
    </style>

    <style name="MySkatemap.TrackRecorder.Dashboard.Tile.Default.Title" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textSize">24sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="MySkatemap.TrackRecorder.Dashboard.Tile.Default.Unit" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="MySkatemap.TrackRecorder.Dashboard.Tile.Default.Value" parent="MySkatemap.TrackRecorder.Dashboard.Tile.Default.Title">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">38sp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="MySkatemap.TrackRecorder.Dashboard.Tile.Main.Title" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textSize">32sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="MySkatemap.TrackRecorder.Dashboard.Tile.Main.Value" parent="MySkatemap.TrackRecorder.Dashboard.Tile.Main.Title">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">58sp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="MySkatemap.TrackRecorder.Dashboard.Tile.Main.Unit" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textSize">24sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
    </style>
</resources>