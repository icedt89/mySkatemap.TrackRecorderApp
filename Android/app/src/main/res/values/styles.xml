<resources>
    <style name="App.Theme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="colorAccent">@color/appBlue</item>

        <item name="alertDialogTheme">@style/App.PopUp</item>
    </style>

    <style name="App.TabLayout" parent="App.Theme">
        <item name="tabRippleColor">?android:attr/colorAccent</item>
        <item name="tabSelectedTextColor">@color/appBlue</item>
    </style>

    <style name="App.Divider" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@color/appLightGray</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
    </style>

    <style name="App.Divider.Horizontal" parent="App.Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="App.AppNavigation.Button" parent="Base.Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="App.PopUp" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/appBlue</item>
    </style>

    <style name="App.SecondaryFab" parent="App.Theme">
        <item name="colorAccent">@android:color/darker_gray</item>
    </style>

    <style name="App.MainFab.Running" parent="App.Theme">
        <item name="fab_colorNormal">@color/appRed</item>
        <item name="android:src">@drawable/ic_pause_24dp</item>
    </style>

    <style name="App.MainFab.NoLocationServices" parent="App.Theme">
        <item name="fab_colorNormal">@color/appOrange</item>
        <item name="android:src">@drawable/ic_location_on_24dp</item>
    </style>

    <style name="App.MainFab.Default" parent="App.Theme">
        <item name="menu_colorNormal">@color/appBlue</item>
        <item name="menu_colorPressed">@color/appBlue</item>
        <item name="menu_icon">@drawable/ic_add_24dp</item>
    </style>

    <style name="App.ExtendedFab" parent="App.Theme">
        <item name="fab_colorNormal">@color/appBlue</item>
    </style>

    <style name="App.SplashscreenActivityTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@drawable/splashscreen</item>
    </style>

    <style name="App.Dashboard.Tile.Content" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="App.ActivityInfo.Container" parent="App.Theme">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="App.ActivityInfo.Container.Label" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="App.Dashboard.Tile.Default.Title" parent="App.Dashboard.Tile.Content">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="App.Dashboard.Tile.Default.Value" parent="App.Dashboard.Tile.Default.Title">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">38sp</item>
    </style>

    <style name="App.Dashboard.Tile.Default.Unit" parent="App.Dashboard.Tile.Content">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="App.Dashboard.Tile.Main.Title" parent="App.Dashboard.Tile.Content">
        <item name="android:textSize">32sp</item>
    </style>

    <style name="App.Dashboard.Tile.Main.Value" parent="App.Dashboard.Tile.Main.Title">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">58sp</item>
    </style>

    <style name="App.Dashboard.Tile.Main.Unit" parent="App.Dashboard.Tile.Content">
        <item name="android:textSize">24sp</item>
    </style>
</resources>